{
  "name": "solopdf-cli",
  "version": "1.3.0",
  "description": "SoloPDF CLI - A powerful PDF manipulation tool with Rust core and Node.js wrapper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soloflow-ai/solopdf-cli.git"
  },
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "pdf",
    "cli",
    "pdf-manipulation",
    "rust",
    "napi",
    "fast",
    "pdf-tools"
  ],
  "scripts": {
    "build": "pnpm --filter=solopdf-cli build",
    "test": "pnpm --filter=solopdf-cli test",
    "lint": "pnpm --filter=solopdf-cli lint",
    "clean": "pnpm --filter=solopdf-cli clean && cd rust-core && cargo clean",
    "build:rust": "cd rust-core && npm install && npx napi build --release",
    "build:all": "pnpm build:rust && pnpm build",
    "validate": "./scripts/quick-check.sh",
    "validate:publish": "./scripts/validate-for-publish.sh",
    "setup:test": "node scripts/setup-execution-env.mjs",
    "publish": "./scripts/publish.sh",
    "version:patch": "cd node-wrapper && npm version patch",
    "version:minor": "cd node-wrapper && npm version minor",
    "version:major": "cd node-wrapper && npm version major"
  },
  "workspaces": [
    "node-wrapper"
  ]
}

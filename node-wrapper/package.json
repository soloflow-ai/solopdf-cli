{
  "name": "solopdf-cli",
  "version": "0.0.6-alpha",
  "description": "A fast PDF manipulation CLI tool powered by Rust and Node.js",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "solopdf": "./dist/index.js",
    "solopdf-cli": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "prebuild": "npm run copy-rust-core-to-src",
    "build": "npm run copy-rust-core-to-src && tsc && npm run copy-rust-core-to-dist",
    "copy-rust-core-to-src": "mkdir -p src/rust-core && cp ../rust-core/index.js src/rust-core/ && cp ../rust-core/index.d.ts src/rust-core/ && cp ../rust-core/index.node src/rust-core/",
    "copy-rust-core-to-dist": "mkdir -p dist/rust-core && cp ../rust-core/index.js dist/rust-core/ && cp ../rust-core/index.d.ts dist/rust-core/ && cp ../rust-core/index.node dist/rust-core/",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit --passWithNoTests",
    "test:integration": "jest --testPathPatterns=integration --passWithNoTests",
    "test:cli": "jest --testPathPatterns=cli --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "setup-test-env": "node ../scripts/setup-execution-env.mjs",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "dev": "ts-node src/index.ts",
    "ci": "pnpm lint && pnpm test:coverage && pnpm build",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm clean && pnpm run ci",
    "postbuild": "chmod +x dist/index.js && rm -rf src/rust-core"
  },
  "keywords": [
    "pdf",
    "cli",
    "pdf-manipulation",
    "rust",
    "napi",
    "fast",
    "pdf-tools",
    "command-line"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/soloflow-ai/solopdf-cli.git",
    "directory": "node-wrapper"
  },
  "bugs": {
    "url": "https://github.com/soloflow-ai/solopdf-cli/issues"
  },
  "homepage": "https://github.com/soloflow-ai/solopdf-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "commander": "^14.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "ora": "^8.2.0"
  }
}
